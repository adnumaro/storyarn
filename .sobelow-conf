[
  verbose: false,
  private: false,
  skip: false,
  router: "lib/storyarn_web/router.ex",
  # Only fail on medium or higher confidence findings.
  # Low confidence findings are reviewed manually:
  # - Traversal.FileModule: Asset storage uses sanitized keys (UUID + filename)
  # - DOS.StringToAtom: Icon names are hardcoded in templates, not user input
  exit: "medium",
  format: "txt",
  ignore: [
    # HTTPS warning ignored - enabled in production via reverse proxy/load balancer
    "Config.HTTPS",
    # False positive: serializer module comes from controlled pattern match on format atoms,
    # not user input. Content type is hardcoded in each serializer module.
    {"XSS.ContentType", "lib/storyarn_web/controllers/export_controller.ex", 50},
    {"XSS.ContentType", "lib/storyarn_web/controllers/export_controller.ex", 58}
  ],
  ignore_files: []
]
